{
  // Render all whitespaces
  "editor.renderWhitespace": "all",

  // JSON specific
  "[json]": {
    "editor.tabSize": 2,
  },

   // Rustlang specific
  "[rust]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.wordWrap": "on"
  },
  "cSpell.diagnosticLevel": "Error",
  "cSpell.allowCompoundWords": true,
  "cSpell.flagWords": [
    "kreyen"
  ],
  "cSpell.ignoreWords": [
    "Krey",
    "Hrbek",
    "kreyren",
    "sysfetch",
    "FSFE"
  ],
  // Configuration for todo-tree extension
  /// To define tag groups
  // "todo-tree.general.tagGroups": {
  //   "FIXME": [
  //       "FIXME-DOCS",
  //       "FIXME-QA",
  //   ],
  // },
  "todo-tree.general.tags": [
    "FIXME",
    "TODO",
    "DNM",
    "DNC",
    "DNR"
  ],
  // NOTE: Icons has to be valid codicons (https://microsoft.github.io/vscode-codicons/dist/codicon.html)
  "todo-tree.highlights.customHighlight": {
    "FIXME": {
      "foreground": "orange",
      "icon": "report",
      "fontWeight": "bold"
    },
    "TODO": {
      "foreground": "turquoise",
      "icon": "tasklist",
      "fontWeight": "bold"
    },
    "DOCS": {
      "foreground:": "blue",
      "icon": "repo",
      "fontWeight": "bold"
    },
    "DNM": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    },
    "DNR": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    },
    "DNC": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    }
  },
  // FIXME-CONTRIB(Krey): Expecting '$TAGS' instead of '(FIXME|...)' which doesn't work
  "todo-tree.regex.regex": "(FIXME|DNC|DNM|DNR|TODO|DOCS)((\\-.*|)\\(.*\\))\\:",
  //"todo-tree.regex.regex": "$TAGS((\\-.*|)\\(.*\\))\\:",
  // NOTE(Krey): Used for debugging
  "todo-tree.highlights.enabled": false,
  "todo-tree.general.debug": true,
}